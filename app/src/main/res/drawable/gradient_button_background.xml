<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF4A0C7F"
                android:centerColor="#FF35155A"
                android:centerY="0.45"
                android:endColor="#FF26252A" />
            <corners android:radius="26dp" />
            <stroke
                android:width="1dp"
                android:color="#FF6A2DA8" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF5A0D8F"
                android:centerColor="#FF3B165F"
                android:centerY="0.45"
                android:endColor="#FF2B2A30" />
            <corners android:radius="26dp" />
            <stroke
                android:width="1dp"
                android:color="#FF6A2DA8" />
        </shape>
    </item>
</selector>