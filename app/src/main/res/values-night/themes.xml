<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_gray_background</item>
        <item name="colorSurface">@color/dark_gray_surface</item>
        <item name="colorOnSurface">@color/white_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray_background</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Стиль без ActionBar для MainActivity -->
    <style name="Theme.MangaApp.NoActionBar" parent="Theme.MangaApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>