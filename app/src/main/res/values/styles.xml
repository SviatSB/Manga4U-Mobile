<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для круглої іконки -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Стиль для темних кнопок -->
    <style name="DarkButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_gray_input</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для фіолетових кнопок -->
    <style name="PurpleButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_accent</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для градієнтних кнопок -->
    <style name="GradientButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">26dp</item>
        <!-- Важливо: backgroundTint має бути null -->
        <item name="backgroundTint">@null</item>
        <!-- Встановлюємо кастомний фон -->
        <item name="android:background">@drawable/gradient_button_background</item>
        <item name="iconTint">@color/white_text</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль для темних полів вводу -->
    <style name="DarkTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_gray_input</item>
        <item name="hintTextColor">@color/gray_text</item>
        <item name="boxBackgroundColor">@color/dark_gray_input</item>
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <!-- Стиль для тексту з тінню -->
    <style name="TextWithShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Bottom Sheet Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>