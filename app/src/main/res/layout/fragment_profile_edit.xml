<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Плавний градієнтний фон -->
    <com.example.mangaapp.views.NeonBackgroundView
        android:id="@+id/neonBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.mangaapp.views.NeonLightningView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center" />

    <!-- Основна прокрутка -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- Заголовок -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Редагування профілю"
                android:textColor="@color/white_text"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Секція аватара -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#181520"
                app:strokeColor="@color/purple_accent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Аватар -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_person"
                        android:background="@color/dark_gray_input"
                        android:padding="24dp"
                        android:tint="@color/gray_text"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        android:layout_marginBottom="20dp" />

                    <!-- Кнопки аватара -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_upload_avatar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ЗАВАНТАЖИТИ"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"
                            android:backgroundTint="@color/purple_accent"
                            android:textColor="@color/white_text"
                            android:layout_marginEnd="8dp"
                            app:icon="@drawable/ic_upload"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconSize="16dp"
                            android:elevation="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_remove_avatar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ПРИБРАТИ"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="#FF0000"
                            app:strokeWidth="2dp"
                            android:textColor="#FF0000"
                            android:layout_marginStart="8dp"
                            app:icon="@drawable/ic_delete"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconTint="#FF0000"
                            android:elevation="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Секція зміни нікнейму -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#181520">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Зміна нікнейму"
                        android:textColor="@color/white_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nickname_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/purple_accent"
                        app:hintTextColor="@color/gray_text"
                        app:boxBackgroundColor="@color/dark_gray_input"
                        android:textColorHint="@color/gray_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nickname_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="16"
                            android:textColor="@color/white_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Секція "Про себе" -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#181520">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Про себе"
                        android:textColor="@color/white_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/about_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/purple_accent"
                        app:hintTextColor="@color/gray_text"
                        app:boxBackgroundColor="@color/dark_gray_input"
                        android:textColorHint="@color/gray_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/about_input"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="6"
                            android:gravity="top"
                            android:textColor="@color/white_text"
                            android:textColorHint="@color/gray_text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Секція зміни пароля -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#181520">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Зміна паролю"
                        android:textColor="@color/white_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Поточний пароль -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Поточний пароль"
                            android:textColor="@color/white_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/current_password_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/purple_accent"
                            app:hintTextColor="@color/gray_text"
                            app:boxBackgroundColor="@color/dark_gray_input"
                            android:textColorHint="@color/gray_text"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/current_password_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:textColor="@color/white_text"
                                android:textColorHint="@color/gray_text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Новий пароль -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Новий пароль"
                            android:textColor="@color/white_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/new_password_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/purple_accent"
                            app:hintTextColor="@color/gray_text"
                            app:boxBackgroundColor="@color/dark_gray_input"
                            android:textColorHint="@color/gray_text"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/new_password_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:textColor="@color/white_text"
                                android:textColorHint="@color/gray_text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопки дій -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ЗБЕРЕГТИ ЗМІНИ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/purple_accent"
                    android:textColor="@color/white_text"
                    android:layout_marginEnd="12dp"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp"
                    android:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="СКАСУВАТИ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#FF0000"
                    app:strokeWidth="2dp"
                    android:textColor="#FF0000"
                    app:icon="@drawable/ic_close"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp"
                    app:iconTint="#FF0000"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Прогрес бар -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Текст помилки -->
            <TextView
                android:id="@+id/error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/error"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>